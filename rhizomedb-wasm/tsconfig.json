{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "include": [
    "src",
    "tests",
    "package.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
